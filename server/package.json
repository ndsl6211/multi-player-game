    }
  },
  "dependencies": {
    "@multi-player-game/common": "workspace:*",
    "express": "^4.19.2",
    "qs": "^6.13.0",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "ws": "^8.18.0"
